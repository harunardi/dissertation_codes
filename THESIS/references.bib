@phdthesis{radaidehNOVELFRAMEWORKDATADRIVEN2019,
  title = {A {{NOVEL FRAMEWORK FOR DATA-DRIVEN MODELING}}, {{UNCERTAINTY QUANTIFICATION}}, {{AND DEEP LEARNING OF NUCLEAR REACTOR SIMULATIONS}}},
